#include <iostream>
using namespace std;

int main() {
	int t;
	cin >> t;
	for(int i = 0 ; i < t; i++)
	{
	    int n , m;
	    cin >> n >> m;
	    if(n%2==0 && m%2==0)
	    {
	        cout << 0 << endl;
	    }
	    else if(n%2!=0 && m%2==0)
	    {
	        cout << m << endl;
	    }
	    else if(n%2==0 && m%2!=0)
	    {
	        cout << n << endl;
	    }
	    else
	    {
	        cout << n + m - 1 << endl;   
	    }
	}
	return 0;
}
